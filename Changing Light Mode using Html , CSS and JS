let hello=document.querySelector("#btn");
let mode= "light-mode";
let mode1=document.querySelector("body");
let text=document.querySelector("h1");

hello.addEventListener("click",() => {
    // console.log("Your are trying to change mode ")
    if (mode === "light-mode"){
        mode="dark-mode";
        mode1.style.backgroundColor="black";
        text.style.color="white";
    }else {
        mode="light-mode";
        mode1.style.backgroundColor="white";
        text.style.color="black";
    }

    console.log(mode)
    })
    
    
